<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cars_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/lighter"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_car"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/jeep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/text_view_car_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/vehicle_number_id"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_view_car_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_view_car_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Price: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_view_car_engine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Engine: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_view_car_passenger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Passenger seats: "
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>